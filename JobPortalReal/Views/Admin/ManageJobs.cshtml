@model IEnumerable<JobPortalReal.Models.Job>

@{
    ViewData["Title"] = "Manage Jobs";
}

<div class="card mt-5 mx-auto" style="max-width: 80%;">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Manage Jobs</h2>
        <a asp-action="Dashboard" class="btn btn-dark">Back to Dashboard</a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-warning">
                <strong>No Jobs Posted Yet!</strong> Start posting jobs to see them here.
            </div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Posted By</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.Title</td>
                            <td>@job.Description</td>
                            <td>@job.Salary</td>
                            <td>@job.PostedBy</td>
                            <td>
                                <form asp-action="DeleteJob" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="@job.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>