@model IEnumerable<JobPortalReal.Models.JobApplication>

@{
    ViewData["Title"] = "Application Status";
}

<div class="card mt-5 mx-auto" style="max-width: 80%;">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Application Status</h2>
        <a asp-action="Dashboard" class="btn btn-dark">Back to Dashboard</a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-info">
                You have not applied for any jobs yet.
            </div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Job Title</th>
                        <th scope="col">Status</th>
                        <th scope="col">Applied On</th>                       
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in Model)
                    {
                        <tr>
                            <td>@application.Job.Title</td>
                            <td>@application.Status</td>
                            <td>@application.AppliedDate.ToString("MM/dd/yyyy")</td>                            
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
