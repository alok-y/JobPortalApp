@model IEnumerable<JobPortalReal.Models.Job>

@{
    ViewData["Title"] = "Available Jobs";
}

<div class="card mt-5 mx-auto" style="max-width: 80%;">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0">Available Jobs</h2>
        <a asp-action="Dashboard" class="btn btn-dark">Back to Dashboard</a>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-warning">
                No jobs are available at the moment. Please check back later.
            </div>
        }
        else
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Posted By</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.Title</td>
                            <td>@job.Description</td>
                            <td>@job.Salary.ToString("C")</td>
                            <td>@job.PostedBy</td>
                            <td>
                                <a asp-action="ApplyJob" asp-route-id="@job.Id" class="btn btn-dark btn-sm">Apply</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>